{
  "name": "notes-microservice",
  "version": "1.0.0",
  "description": "A Node.js microservice for managing notes with SQLite and Express",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:unit": "jest --testPathPattern=database",
    "test:integration": "jest --testPathPattern=api",
    "test:validation": "jest --testPathPattern=validation",
    "test:ci": "jest --coverage --watchAll=false"
  },
  "keywords": [
    "notes",
    "microservice",
    "express",
    "sqlite"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "nodemon": "^3.1.10",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "supertest": "^7.1.4"
  }
}
